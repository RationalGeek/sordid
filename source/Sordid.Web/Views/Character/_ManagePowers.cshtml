<div class="panel-body">
    <div id="powersAddContainer">
        <button class="btn btn-info btn-sm" data-toggle="modal" data-target="#addStockPowerModal">
            <span class="glyphicon glyphicon-book"></span> Add Stock
        </button>
        <button class="btn btn-info btn-sm" data-toggle="modal" data-target="#addCustomPowerModal">
            <span class="glyphicon glyphicon-cog"></span> Add Custom
        </button>
    </div>
</div>

<table class="table table-hover powerContainer">
    <thead>
        <tr>
            <th class="col-sm-10"></th>
            <th class="cost col-sm-1">Cost</th>
            <th class="remove col-sm-1">Remove</th>
        </tr>
    </thead>
    <tbody>
        <!-- ko foreach: Character.PowersSorted -->
        <tr data-bind="powerInit: true">
            <td class="name">
                <span class="glyphicon" data-bind="powerGlyph: Power"></span>
                <span data-bind="text: Power.Name"></span>
            </td>
            <td class="cost"><span class="badge" data-bind="text: Power.Cost"></span></td>
            <td class="remove"><a class="btn btn-danger btn-sm powerDeleteButton" title="Remove" data-bind="powerDelete: true"><span class="glyphicon glyphicon-remove"></span></a></td>
        </tr>
        <!-- /ko -->
        <!-- ko if: Character.PowersSorted().length === 0 -->
        <tr><td colspan="3" class="noPowersMessage">Click on the add buttons above to add powers...</td></tr>
        <!-- /ko -->
    </tbody>
    <tfoot>
        <tr>
            <td style="text-align: right;">Total Refresh</td>
            <td class="cost">
                <span class="badge" data-bind="text: Character.TotalPowerCost"></span>
            </td>
            <td></td>
        </tr>
    </tfoot>
</table>

<div class="modal fade" id="addStockPowerModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Add Power</h4>
            </div>
            <div class="modal-body">
                <div class="loadingContainer">
                    <img class="ajaxLoader" src="@Url.Content("~/content/site/ajax-loader.gif")" />
                </div>
                <div class="modalContentsContainer" style="display: none;"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="addStockPowerModalAddButton">Add</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addStockPowerModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Add Power</h4>
            </div>
            <div class="modal-body">
                <div class="loadingContainer">
                    <img class="ajaxLoader" src="@Url.Content("~/content/site/ajax-loader.gif")" />
                </div>
                <div class="modalContentsContainer" style="display: none;"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="addStockPowerModalAddButton">Add</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addCustomPowerModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Add Power</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="row">
                        <div class="col-md-8 form-group">
                            <label for="powerName" class="control-label">Name</label>
                            <input id="powerName" placeholder="Enter Power Name" class="form-control" />
                        </div>
                        <div class="col-md-4 form-group">
                            <label for="powerCost" class="control-label">Cost</label>
                            <input id="powerCost" type="number" step="1" class="form-control" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="addCustomPowerModalAddButton">Add</button>
            </div>
        </div>
    </div>
</div>

