<div class="panel-body">
    <!-- ko foreach: {data: ranks, as: 'currRank'} -->
    <div class="row skillPanel" data-bind="attr: { id: 'skillPanel-rank' + currRank.value}">
        <div class="col-sm-4 skillRankLabel" data-bind="text: currRank.name"></div>
        <div class="col-sm-8 skillDropArea" data-bind="attr: { 'data-rank': currRank.value }, foreach: $root.Character.Skills, droppableSkill: true">
            <!-- ko if: Rank() == currRank.value -->
            <div class="skill" data-bind="text: Skill.Name, attr: { title: Skill.Trappings }, draggableSkill: true"></div>
            <!-- /ko -->
        </div>
    </div>
    <!-- /ko -->
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4 col-xs-6">
            Skill points spent:
            <span id="skillPointsSpent" class="badge" data-bind="text: Character.SkillPointsSpent">0</span>
        </div>
        <div class="col-sm-4 col-xs-6">
            Available:
            <span class="badge" data-bind="text: Character.MaxSkillPoints">0</span>
        </div>
    </div>
</div>
