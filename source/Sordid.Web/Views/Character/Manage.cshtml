@model Sordid.Web.Models.ManageCharacterViewModel
@{
    ViewBag.Title = Model.Character.Name;
}

@section Styles
{
    <style type="text/css">
        #section-skills .skill {
            background-color: #ddd;
            border: solid thin black;
            padding: 2px;
            margin: 2px;
            display: inline-block;
            box-shadow: 2px 2px 2px #888;
            cursor: move;
        }

        .skillPanel {
            margin-bottom: 20px;
        }

        .skillPanel .skillRankLabel {
            font-weight: bold;
            font-size: 110%;
        }

        .skillPanel .skillDropArea {
            border: solid thin #999;
            min-height: 50px;
        }

        .skillPanel .dropActive {
            background-color: #ffe;
        }

        .skillPanel .dropHover {
            background-color: #ff9;
        }
    </style>
}

<div class="row" style="padding-bottom: 2px;">
    <div class="col-md-9 col-md-offset-1" data-bind="text: Character.Name" style="font-size: 20pt;">
    </div>
    @* TODO: Can't get this stupid button to align bottom *@
    <div class="col-md-1" style="text-align: right; padding: 0;">
        <a id="saveButton" class="btn btn-success btn-sm" title="Save Character">
            <span id="saveIcon" class="glyphicon glyphicon-floppy-disk"></span>
            <span id="pendingSaveIcon" class="glyphicon glyphicon-transfer hidden"></span>
        </a>
    </div>
</div>

<div class="row">
    <div id="character-sections" class="col-md-2 col-md-offset-1 btn-group-vertical">
        <a type="button" href="#section-basics" class="btn btn-primary active">Basics</a>
        <a type="button" href="#section-skills" class="btn btn-primary">Skills</a>
        <a type="button" href="#section-aspects" class="btn btn-primary">Aspects</a>
    </div>

    <div id="section-basics" class="char-section col-md-8 panel panel-default" style="padding-top: 15px;">
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label for="characterName" class="col-md-3 control-label">Name</label>
                <div class="col-md-9">
                    <input id="characterName" class="form-control" data-bind="value: Character.Name" />
                </div>
            </div>
            <div class="form-group">
                <label for="playerName" class="col-md-3 control-label">Player Name</label>
                <div class="col-md-9">
                    <input id="playerName" class="form-control" data-bind="value: Character.PlayerName" />
                </div>
            </div>
        </form>
    </div>

    <div id="section-skills" class="char-section col-md-8 panel panel-default hidden">
        <div class="panel-body">
            <div class="row skillPanel" >
                <div class="col-md-4 skillRankLabel">Superb (+5)</div>
                <div class="col-md-8 skillDropArea"></div>
            </div>
            <div class="row skillPanel">
                <div class="col-md-4 skillRankLabel">Great (+4)</div>
                <div class="col-md-8 skillDropArea"></div>
            </div>
            <div class="row skillPanel">
                <div class="col-md-4 skillRankLabel">Good (+3)</div>
                <div class="col-md-8 skillDropArea"></div>
            </div>
            <div class="row skillPanel">
                <div class="col-md-4 skillRankLabel">Fair (+2)</div>
                <div class="col-md-8 skillDropArea"></div>
            </div>
            <div class="row skillPanel">
                <div class="col-md-4 skillRankLabel">Average (+1)</div>
                <div class="col-md-8 skillDropArea"></div>
            </div>
            <div class="row skillPanel">
                <div class="col-md-4 skillRankLabel">Mediocre (+0)</div>
                <div class="col-md-8 skillDropArea" data-bind="foreach: Character.Skills">
                    <div class="skill" data-bind="text: Name, attr: { title: Trappings }"></div>
                </div>
            </div>
        </div>
    </div>

    <div id="section-aspects" class="char-section col-md-8 panel panel-default hidden">
        <div class="panel-body">
            Aspects
        </div>
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/jquery.ui")

    <script src="@Url.Content("~/Scripts/Site/characterManage.js")"></script>
    <script>
        $(document).ready(function() {
            // Initialize Knockout
            var viewModelRaw = @Html.Raw( Json.Encode(Model) );
            sordid.characterManage.initKnockout(viewModelRaw);
        });
    </script>

    @* Must go after KO is initialized! *@
    <script src="@Url.Content("~/Scripts/Site/characterSkills.js")"></script>
}

