<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Sordid - DresdenRPG Character Builder</title>
    <link href='http://fonts.googleapis.com/css?family=Frijole' rel='stylesheet' type='text/css' />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet"> @* TODO: Why is this needed when deployed but not in local dev? *@
    @RenderSection("styles", required: false)
</head>
<body>
    <div id="alertContainer"></div>
    <div id="alphaWarning" class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <strong>This site is in alpha.  You're data is not safe!</strong>
        Sordid is still in early testing, and is not yet ready for prime time.  Do not store any
        data on this site without a backup, or accept the risk that you will lose it.
        We will make every effort to retain data as we improve the site, but we make no guarantees.
        Click on the X to the right and you won't have to see this anymore.
    </div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" id="logoLink" class="navbar-brand" title="Sordid - Fate Character Builder">
                    <div class="mainLogoText">Sordid</div>
                    <div class="subLogoText">DresdenRPG Character Builder</div>
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul id="mainNav" class="nav navbar-nav">
                    <li>@Html.ActionLink("My Characters", "Index", "Character")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Help", "Help", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="mainContentArea" class="container body-content">
        <div class="row">
            <div class="col-md-9 col-sm-12">
                <div class="row">
                    @RenderBody()
                </div>
            </div>
        </div>

        @*<div class="row">
            <div class="col-lg-12 visible-lg">
                <div class="alert alert-danger">Large</div>
            </div>
            <div class="col-md-12 visible-md">
                <div class="alert alert-danger">Medium</div>
            </div>
            <div class="col-sm-12 visible-sm">
                <div class="alert alert-danger">Small</div>
            </div>
            <div class="col-xs-12 visible-xs">
                <div class="alert alert-danger">XSmall</div>
            </div>
        </div>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/json2")
    @Scripts.Render("~/bundles/require")
    @Scripts.Render("~/bundles/site")
    @RenderSection("scripts", required: false)
</body>
</html>
